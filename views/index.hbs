              <label for="Matcha Latte" class="card-body px-2 btn-hide-radio">
                <h5 class="card-title">Matcha Latte</h5>
                <input type="radio" id="Matcha Latte" name="drink" value="Matcha Latte">
              </label>
            </div>
        </div>
      </section>
        
      <!-- btn group_sugar -->
      <section class="sugar mb-4">
        <label  class="d-block text-light mb-2">Sugar</label>
        <div class="btn-group btn-group-toggle" data-toggle="buttons">
          <label class="btn btn-outline-info btn-hide-radio">
            <input type="radio" name="sugar" value="No Sugar">No
          </label>
          <label  class="btn btn-outline-info btn-hide-radio">
            <input type="radio" name="sugar" value="A Little Sugar">A Little
          </label>
          <label class="btn btn-outline-info btn-hide-radio">
            <input type="radio" name="sugar" value="Half Sugar">Half
          </label>
          <label class="btn btn-outline-info btn-hide-radio">
            <input type="radio" name="sugar" value="Less Sugar">Less
          </label>
          <label class="btn btn-outline-info btn-hide-radio active">
            <input type="radio" name="sugar" value="Regular Sugar" checked>Regular
          </label>
        </div>
      </section>
      <!-- btn group_ice -->
      <section class="ice mb-4">
        <label for="" class="d-block text-light mb-2">Ice</label>
        <div class="btn-group btn-group-toggle" data-toggle="buttons">
          <label for="No Ice" class="btn btn-outline-info btn-hide-radio">
            <input type="radio" name="ice" value="No Ice" id="No Ice">No
          </label>
          <label for="Less Ice" class="btn btn-outline-info btn-hide-radio">
            <input type="radio" name="ice" value="Less Ice" id="Less Ice">Less
          </label>
          <label for="Regular Ice" class="btn btn-outline-info btn-hide-radio active">
            <input type="radio" name="ice" value="Regular Ice" id="Regular Ice" checked>Regular
          </label>
        </div>
      </section>
      <!-- add-drink -->
      <div class="text-end">
        <div class="btn btn-primary" style="min-width:120px;" data-pos="add-drink">Add</div>
      </div>
